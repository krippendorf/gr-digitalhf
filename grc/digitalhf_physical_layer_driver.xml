<?xml version="1.0"?>
<block>
  <name>physical_layer_driver</name>
  <key>digitalhf_physical_layer_driver</key>
  <category>[digitalhf]</category>
  <import>import digitalhf</import>
  <make>digitalhf.physical_layer_driver($samp_rate, $sps, $alpha, $mu, $nB, $nF, $nW, $description_name, $mode)</make>
  <callback>set_mu($mu)</callback>
  <callback>set_alpha($alpha)</callback>
  <callback>set_mode($mode)</callback>
  <param>
    <name>Description</name>
    <key>description_name</key>
    <type>string</type>
  </param>
  <param>
    <name>sample rate</name>
    <key>samp_rate</key>
    <type>int</type>
  </param>
  <param>
    <name>SPS</name>
    <key>sps</key>
    <type>int</type>
  </param>
  <param>
    <name>nB</name>
    <key>nB</key>
    <type>int</type>
  </param>
  <param>
    <name>nF</name>
    <key>nF</key>
    <type>int</type>
  </param>
  <param>
    <name>nW</name>
    <key>nW</key>
    <type>int</type>
  </param>
  <param>
    <name>mu</name>
    <key>mu</key>
    <type>float</type>
  </param>
  <param>
    <name>alpha</name>
    <key>alpha</key>
    <type>float</type>
  </param>
  <param>
    <name>mode</name>
    <key>mode</key>
    <type>string</type>
  </param>

  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

  <source>
    <name>out_symb</name>
    <type>complex</type>
  </source>
  <source>
    <name>out_cc</name>
    <type>complex</type>
  </source>

  <source>
    <name>soft_dec</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
